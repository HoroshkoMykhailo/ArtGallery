{
  "name": "@art-gallery/backend",
  "private": true,
  "engines": {
    "node": "20.11.x",
    "npm": "10.2.x"
  },
  "type": "module",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "tsx watch ./src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint . --max-warnings=0",
    "lint": "concurrently \"npm:lint:*\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "tsx ../../node_modules/typeorm/cli.js migration:generate ./src/migrations/InitialMigration -d ./src/libs/config/ormconfig.ts",
    "migration:run": "tsx ../../node_modules/typeorm/cli.js migration:run -d ./src/libs/config/ormconfig.ts",
    "migration:revert": "tsx ../../node_modules/typeorm/cli.js migration:revert -d ./src/libs/config/ormconfig.ts",
    "migration:create": "tsx ../../node_modules/typeorm/cli.js migration:create -d ./src/libs/config/ormconfig.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/typeorm": "^10.0.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "dotenv": "16.4.5",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@art-gallery/shared": "*",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^6.0.0",
    "@jest/globals": "^29.5.0",
    "jest": "^29.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "4.15.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
